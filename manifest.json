{
  "name": "TaDaah Chrome Extension",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "Tracker Blocker",
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"],

  "permissions": [
    "cookies",
    "geolocation",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "webRequest",
    "storage"],

  "icons": {"48": "cookie.png"},

  "content_scripts": [{
    "matches": ["http://*/*, https://*/*"],
    "js": ["script.js", "popup.js"]
  }],
  
  "action": {
    "default_title": "TaDaah Tracker Blocker",
    "default_popup": "popup.html",
    "default_icon": {
      "32": "cookie.png",
      "38": "cookie.png"}
    },

  "declarative_net_request" : {
    "rule_resources" : [{
      "id": "ruleset",
      "enabled": true,
      "path": "rules.json"
      }]
    }
}


